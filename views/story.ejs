<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= story.title %></h2>
      <img class="img-fluid" src="<%= story.image%>" />
      <div class="row justify-content-between">

        <%if(story.user.toString() !== user.id){ %>
        <form
          class="col-1"
          action="/story/likeStory/<%= story.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <%}%>

        <h3 class="col-3">Likes: <%= story.likes %></h3>

        <%if(story.user == user.id){ %>
        <form
          action="/story/deleteStory/<%= story.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>

      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= story.textContent %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/library">Read other people's story</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
