<%- include('partials/header') -%>
<div class="container">
   <!--User info-->
   <% if(user){%>
   <div>
    <p><strong>User Name</strong>: <%= user.userName %></p>
  </div>
  <% }%>
  <!--/User info-->
  <!--The story-->
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <span><%= story.user.userName%></span>
      <h2><%= story.title%></h2>
      <!--Displaying the region and managing the comma-->
      <span>
        <%= story.country %><%if(story.country && story.continent ) { %>,<% }%> <%= story.continent%>
      </span>
      <!-- /Displaying the region and managing the comma-->
      <img class="img-fluid" src="<%= story.image%>" />
      <!--User actions-->
      <div class="row justify-content-between">
         <!--Like story-->
         <%if(user && story.user._id != user.id){ %>
          <form
            class="col-1"
            action="/story/likeStory/<%= story._id %>?_method=PUT"
            method="POST"
          >
          <button class="btn btn-primary fa-solid fa-thumbs-up" style="color: #ffffff;" type="submit"></button>
          </form>
          <%}%>
          <!-- /Like story-->
          <!--Favorite story-->
          <%if(user && story.user._id != user.id){ %>
            <form
              class="col-1"
              action="/story/favoriteStory/<%= story._id %>"
              method="POST"
            >
              <button class="btn btn-primary fa fa-star" type="submit"></button>
            </form>
            <%}%>
          <!-- /Favorite story-->
          <!--Num of likes story-->
          <h3 class="col-4">Likes: <%= story.likes %></h3>
          <!-- /Num of likes story-->
          <!--Delete story-->
          <%if( user && story.user._id == user.id){ %>
          <form
            action="/story/deleteStory/<%= story._id %>?_method=DELETE"
            method="POST"
            class="col-1"
          >
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
          <%}%>
          <!--/Delete story-->
      </div>
      <!-- /User actions-->
    </div>
    <div class="col-3 mt-5">
      <p><%= story.textContent %></p>
    </div>
    <!--Story's text-->
    <div class="col-6 mt-5">
      <% if(user){%>
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <% }%>
      <a class="btn btn-primary" href="/library">Read other stories</a>
    </div>
    <!-- /Story's text-->
  </div>
  <!-- /The story-->
</div>

<%- include('partials/footer') -%>
