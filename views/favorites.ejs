<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<stories.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/story/<%= stories[i].story._id%>">
              <h2><%= stories[i].story.title%></h2>
              <img class="img-fluid" src="<%= stories[i].story.image%>">
              <p><%= stories[i].story.textContent.split(" ").slice(0,30).join(" ")%>...</p>
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>